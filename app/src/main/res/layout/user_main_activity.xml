<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dd"
    tools:context=".UserMainActivity">


    <TextView
        android:id="@+id/welcome3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="lets start design your cloth:)"
        android:textColor="@color/teal_700"
        android:textSize="30dp" />
    <Button
        android:id="@+id/your_own_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/welcome3"
        android:layout_centerHorizontal="true"
        android:text="Choose your own design" />

    <Button
        android:id="@+id/existing_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_own_btn"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Choose from an existence design" />




</RelativeLayout>