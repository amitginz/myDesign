<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I want to include this in my order"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="2dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/purchase_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Design of - "
                android:paddingStart="10dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/email"
                android:paddingTop="5dp"
                android:layout_below="@+id/purchase_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Designer email - "
                android:drawableStart="@drawable/ic_baseline_black_mail_outline_24"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/bid"
                android:paddingTop="5dp"
                android:layout_below="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/ic_baseline_attach_black_dollar_24"
                android:text="BID - "
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/product_name"
                android:paddingTop="5dp"
                android:layout_below="@+id/bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Product Name - "
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/description"
                android:paddingTop="5dp"
                android:layout_below="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Description - "
                android:textColor="@android:color/black"
                android:textSize="15sp" />


        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>